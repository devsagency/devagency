{% extends 'layout/layout.twig' %}

{% block subtitle %}Connexion à l'Administration{% endblock %}

{% block description %}{% endblock %}

{% block script %}
    <script src="js/recaptcha.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer></script>
{% endblock %}

{% block main %}
    <main class="align-center">
        <form class="form" 
            action="{{ url('auth')}}" 
            method="post">
            <fieldset>
                <ul>
                    <li>
                        <label for="email">Courriel</label>
                        <input id="email" 
                            name="email" 
                            type="email" 
                            placeholder="Insérer votre Courriel" 
                            required>
                    </li>
                    <li>
                        <label for="pass">Mot de Passe</label>
                        <input id="pass" 
                            name="pass" 
                            type="password" 
                            placeholder="Insérer votre Mot de Passe" 
                            autocomplete="off" 
                            required>
                    </li>
                </ul>
                <ul>
                    <li>
                        <div id="recaptcha" 
                            class="g-recaptcha container" 
                            data-sitekey="6LddRNMZAAAAADmqqZklZD2MAdxrJI5yi_xCS1On">
                        </div>
                    </li>
                    <li>
                        <input type="reset" 
                            value="Réinitialiser">
                        <input type="submit" 
                            value="Connexion">
                    </li>
                </ul>
            </fieldset>
        </form>
        <a class="btn-black btn-lg" 
            href="./">
            Quitter
        </a>
    </main>
{% endblock %}

{% extends 'layout/layout.twig' %}

{% block subtitle %}Welcome{% endblock %}

{% block description %}Web Development, Dev Tools & Developer Training - Open-source & Cross-platform Technologies - HTML, Twig, CSS, Sass, JavaScript, PHP, Symfony, SQL, Git & GitHub{% endblock %}

{% block script %}
    <script src="node_modules/animadio.js/dist/animadio.js"></script>
    <script src="js/script.js"></script>
{% endblock %}

{% block main %}
    <main id="slider" class="slider">
        <input id="slider-radio1" class="slider-radio1" type="radio" name="slider" disabled checked>
        <input id="slider-radio2" class="slider-radio2" type="radio" name="slider" disabled>
        <input id="slider-radio3" class="slider-radio3" type="radio" name="slider" disabled>
        <input id="slider-radio4" class="slider-radio4" type="radio" name="slider" disabled>
        <input id="slider-radio5" class="slider-radio5" type="radio" name="slider" disabled>
        <input id="slider-radio6" class="slider-radio6" type="radio" name="slider" disabled>

        <figure id="slider-relay" class="slider-relay">
            <figure class="slider-target1">
                <img src="img/slider/welcome.jpg" alt="Welcome Picture">
                <figcaption>Welcome to the Developers Agency !</figcaption>
            </figure>
            <figure class="slider-target2">
                <img src="img/slider/website.jpg" alt="Website Shop Picture">
                <figcaption>If you need a Responsive Website for your Shop...</figcaption>
            </figure>
            <figure class="slider-target3">
                <img src="img/slider/seo.jpg" alt="SEO Expertise Picture">
                <figcaption>Or a SEO Expertise for your Own Website...</figcaption>
            </figure>
            <figure class="slider-target4">
                <img src="img/slider/tool.jpg" alt="Digital Tool Picture">
                <figcaption>Or else a Programming Tool for your Business...</figcaption>
            </figure>
            <figure class="slider-target5">
                <img src="img/slider/training.jpg" alt="Development Training Picture">
                <figcaption>Or even a Development Training for You...</figcaption>
            </figure>
            <figure class="slider-target6">
                <img src="img/slider/devsagency.jpg" alt="DevsAgency Picture">
                <figcaption>You can find All of Them Here, @DevsAgency !</figcaption>
            </figure>
        </figure>

        <ul>
            <li>
                <button id="slider-previous" class="slider-previous" title="Previous (&larr;)">
                    <i class="fas fa-step-backward fa-2x"></i>
                </button>
            </li>
            <li>
                <button id="slider-auto" class="slider-auto" title="Pause (&uarr;)">
                    <i class="fas fa-pause fa-2x"></i>
                </button>
            </li>
            <li class="hide">
                <button id="slider-random" class="slider-random" title="Random (&darr;)">
                    <i class="fas fa-random fa-2x"></i>
                </button>
            </li>
            <li>
                <button id="slider-next" class="slider-next" title="Next (&rarr;)">
                    <i class="fas fa-step-forward fa-2x"></i>
                </button>
            </li>
        </ul>

        <ul class="slider-progress">
            <li>
                <label for="slider-radio1">
                    <i class="fas fa-dot-circle" aria-hidden="true"></i>
                </label>
            </li>
            <li>
                <label for="slider-radio2">
                    <i class="fas fa-dot-circle" aria-hidden="true"></i>
                </label>
            </li>
            <li>
                <label for="slider-radio3">
                    <i class="fas fa-dot-circle" aria-hidden="true"></i>
                </label>
            </li>
            <li>
                <label for="slider-radio4">
                    <i class="fas fa-dot-circle" aria-hidden="true"></i>
                </label>
            </li>
            <li>
                <label for="slider-radio5">
                    <i class="fas fa-dot-circle" aria-hidden="true"></i>
                </label>
            </li>
            <li>
                <label for="slider-radio6">
                    <i class="fas fa-dot-circle" aria-hidden="true"></i>
                </label>
            </li>
        </ul>
    </main>
{% endblock %}

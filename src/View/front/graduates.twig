{% extends 'layout/layout.twig' %}

{% block subtitle %}Graduates{% endblock %}

{% block summary %}The DevsAgency presents the Graduates Developers !{% endblock %}

{% block main %}
    <main class="container-90tn-80sm-70md-60lg-50wd mar-bot-lg">

        <header class="container-90sm-80md-70lg-60wd bg-white bord-double bord-curve bord-purple pad-md mar-bot-lg">Graduates could be your future Developers !</header>

        {% for graduate in allGraduates %}
            <section class="card-blue anima-slideT">
                <h2>{{ graduate.name }}</h2>

                <figure>
                    <img src="img/members/{{ graduate.image }}" alt="{{ graduate.name }} picture">
                    <figcaption>Looking for<br>{{ graduate.position }}<br>in<br>{{ graduate.city }}</figcaption>
                </figure>

                <a class="btn-blue" href="https://www.linkedin.com/in/{{ graduate.linkedin }}" title="Watch the LinkedIn profile of {{ graduate.name }} !">
                    <i class="fab fa-linkedin fa-lg"></i>
                </a>
                <a class="btn-blue" href="https://{{ graduate.website }}" title="Watch the website of {{ graduate.name }} !">
                    <i class="fas fa-globe-europe fa-lg"></i>
                </a>
                <a class="btn-blue" href="mailto:{{ graduate.email }}" title="Contact {{ graduate.name}} by email !">
                    <i class="fas fa-envelope fa-lg"></i>
                </a>

                <p>{{ graduate.presentation }}</p>
            </section>
        {% endfor %}
    </main>
{% endblock %}

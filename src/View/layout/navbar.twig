<nav class="navbar">

    <input id="navbar-close" 
        class="navbar-close" 
        type="radio" 
        name="navbar" 
        checked>
    <input id="navbar-open" 
        class="navbar-open" 
        type="radio" 
        name="navbar">

    <a class="anima-slideB-this" 
        href="./" 
        title="Accueil">
        <img src="img/logo.svg" 
            alt="Logo DevsAgency"
            width="40"
            height="40">
    </a>
    
    <ul>
        <li>
            <a href="{{ url('services') }}"
                 title="Services Disponibles">
                <i class="fas fa-concierge-bell fa-lg fa-fw"></i>
                <span>Services</span>
            </a>
        </li>
        <li>
            <a href="{{ url('projects') }}" 
                title="Outils & Sites Web">
                <i class="fas fa-jedi fa-lg fa-fw"></i>
                <span>Projets</span>
            </a>
        </li>
        <li>
            <a href="{{ url('developers') }}" 
                title="Développeurs Diplômés">
                <i class="fas fa-user-tie fa-lg fa-fw"></i>
                <span>Développeurs</span>
            </a>
        </li>
        <li>
            <a href="{{ url('members') }}" 
                title="Membres de l'Équipe">
                <i class="fas fa-user-ninja fa-lg fa-fw"></i>
                <span>Équipe</span>
            </a>
        </li>
    </ul>

    <ul>
        {% if (checkUser()) %}
        <li>
            <a href="{{ url('admin') }}" 
                title="Administration">
                <img class="bord-circle" 
                    src="img/members/{{ getSession('image') }}" 
                    alt="{{ getSession('name') }} Picture">
            </a>
        </li>
        <li>
            <a class="onto-color-red" 
                href="{{ url('auth!logout') }}" 
                title="Déconnexion">
                <i class="fas fa-sign-out-alt fa-lg fa-fw"></i>
            </a>
        </li>
        {% else %}
        <li>
            <a class="onto-color-blue" 
                href="{{ url('contact') }}" 
                title="Contact">
                <i class="fas fa-at fa-lg fa-fw"></i>
            </a>
        </li>
        <li>
            <a class="onto-color-orange" 
                href="{{ url('auth') }}" 
                title="Connexion">
                <i class="fas fa-sign-in-alt fa-lg fa-fw"></i>
            </a>
        </li>
        {% endif %}
    </ul>

    <label for="navbar-close" 
        title="Close the Navigation Menu">
        <i class="fas fa-angle-double-up fa-lg"></i>
    </label>
    <label for="navbar-open" 
        title="Open the Navigation Menu">
        <i class="fas fa-angle-double-down fa-lg"></i>
    </label>
</nav>

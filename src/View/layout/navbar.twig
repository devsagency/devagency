<nav class="navbar">

    <input id="navbar-close" 
        class="navbar-close" 
        type="radio" 
        name="navbar" 
        checked>
    <input id="navbar-open" 
        class="navbar-open" 
        type="radio" 
        name="navbar">

    <a class="anima-slideR-this" 
        href="./" 
        title="Accueil">
        <img src="img/logo.svg" 
            alt="Logo DevsAgency">
    </a>
    
    <ul>
        <li>
            <a href="{{ url('services') }}"
                 title="Services Disponibles">
                <i class="fas fa-concierge-bell fa-lg"></i>
                <span>Services</span>
            </a>
        </li>
        <li>
            <a href="{{ url('projects') }}" 
                title="Outils & Sites Web">
                <i class="fas fa-jedi fa-lg"></i>
                <span>Projets</span>
            </a>
        </li>
        <li>
            <a href="{{ url('graduates') }}" 
                title="Développeurs Diplômés">
                <i class="fas fa-user-graduate fa-lg"></i>
                <span>Diplômés</span>
            </a>
        </li>
        <li>
            <a href="{{ url('members') }}" 
                title="Membres de l'Équipe">
                <i class="fas fa-users fa-lg"></i>
                <span>Équipe</span>
            </a>
        </li>
    </ul>

    <ul class="anima-slideL-this">
        {% if (isLogged()) %}
        <li>
            <a href="{{ url('admin') }}" 
                title="{{ getUserVar('name') }} Admin">
                <img class="bord-circle" 
                    src="img/members/{{ getUserVar('image') }}" 
                    alt="{{ getUserVar('name') }} Picture">
            </a>
        </li>
        <li>
            <a class="onto-color-red" 
                href="{{ url('auth!logout') }}" 
                title="Logout">
                <i class="fas fa-sign-out-alt fa-lg"></i>
            </a>
        </li>
        {% else %}
        <li>
            <a class="onto-color-cyan" 
                href="{{ url('contact') }}" 
                title="Contact">
                <i class="fas fa-at fa-lg"></i>
            </a>
        </li>
        <li>
            <a class="onto-color-orange" 
                href="{{ url('auth') }}" 
                title="Login">
                <i class="fas fa-sign-in-alt fa-lg"></i>
            </a>
        </li>
        {% endif %}
    </ul>

    <label for="navbar-close" 
        title="Close the Navigation Menu">
        <i class="fas fa-angle-double-up fa-lg"></i>
    </label>
    <label for="navbar-open" 
        title="Open the Navigation Menu">
        <i class="fas fa-angle-double-down fa-lg"></i>
    </label>
</nav>

{% extends 'layout/layout.twig' %}

{% block subtitle %}Créer un Nouveau Diplômé{% endblock %}

{% block summary %}{% endblock %}

{% block main %}
<main class="align-center">
    <form class="form" 
        method="post" 
        action={{ url('graduates!create') }} 
        enctype="multipart/form-data">
        <input name="MAX_FILE_SIZE" 
            type="hidden" 
            value="5000000">
        <fieldset>
            <legend>
                <i class="fas fa-user-graduate fa-4x color-blue"></i>
            </legend>
            <ul>
                <li>
                    <label for="name">
                        Nom
                    </label>
                    <input id="name" 
                        name="name" 
                        type="text" 
                        maxlength="30"  
                        placeholder="Insérer son Nom"
                        required>
                </li>
                <li>
                    <label for="file">
                        Photo (max 5Mo)
                    </label>
                    <input name="file" 
                        type="file" 
                        accept=".jpg, .jpeg, .png, .svg, .gif" 
                        required>
                </li>
                <li>
                    <label for="email">
                        Courriel :
                    </label>
                    <input id="email" 
                        name="email" 
                        type="email" 
                        maxlength="30" 
                        minlength="5" 
                        placeholder="example@domain.com"
                        required>
                </li>
                <li>
                    <label for="linkedin">
                        LinkedIn
                    </label>
                    <input id="linkedin" 
                        name="linkedin" 
                        type="text" 
                        maxlength="30" 
                        placeholder="Insérer son Pseudo LinkedIn"
                        required>
                </li>
                <li>
                    <label for="website">
                        Site Web
                    </label>
                    <input id="website" 
                        name="website" 
                        type="url" 
                        maxlength="40" 
                        pattern="https://.*" 
                        placeholder="https://example.com"
                        required>
                </li>
                <li>
                    <label for="position">
                        Poste
                    </label>
                    <input id="position" 
                        name="position" 
                        type="text" 
                        maxlength="30" 
                        placeholder="Insérer le Poste Recherché"
                        required>
                </li>
                <li>
                    <label for="city">
                        Ville
                    </label>
                    <input id="city" 
                        name="city" 
                        type="text" 
                        maxlength="30" 
                        placeholder="Insérer la Ville du Poste"
                        required>
                </li>
                <li>
                    <label for="presentation">
                        Présentation
                    </label>
                    <textarea id="presentation" 
                        name="presentation" 
                        maxlength="255" 
                        rows="10" 
                        required>
                    </textarea>
                </li>
            </ul>
            <ul>
                <li>
                    <input type="reset" 
                        value="Réinitialiser">
                    <input type="submit" 
                        value="Créer">
                </li>
            </ul>
        </fieldset>
    </form>
    <a class="btn-black btn-lg" 
        href="{{ url('admin') }}">
        Quitter
    </a>
</main>
{% endblock %}

{% extends 'layout/layout.twig' %}

{% block subtitle %}Edit the Graduate{% endblock %}

{% block summary %}{% endblock %}

{% block main %}
    <main class="align-center">
        <form class="form" method="post" action={{ url('graduates!update', {'id': graduate.id}) }} enctype="multipart/form-data">
            <input name="MAX_FILE_SIZE" type="hidden" value="5000000">
            <fieldset>
                <legend>
                    <i class="fas fa-user-graduate fa-4x color-blue"></i>
                </legend>
                <ul>
                    <li>
                        <label for="name">Name</label>
                        <input id="name" name="name" type="text" maxlength="30" required value="{{ graduate.name }}">
                    </li>
                    <li>
                        <label for="file">Image (max 5Mo)</label>
                        <input name="file" type="file" accept=".jpg, .jpeg, .png, .gif">
                    </li>
                    <li>
                        <label for="email">Email :</label>
                        <input id="email" name="email" type="email" maxlength="30" minlength="15" required value="{{ graduate.email }}">
                    </li>
                    <li>
                        <label for="linkedin">LinkedIn</label>
                        <input id="linkedin" name="linkedin" type="text" maxlength="30" required value="{{ graduate.linkedin }}">
                    </li>
                    <li>
                        <label for="website">Website</label>
                        <input id="website" name="website" type="url" maxlength="40" pattern="https://.*" required value="https://{{ graduate.website }}">
                    </li>
                    <li>
                        <label for="position">Position</label>
                        <input id="position" name="position" type="text" maxlength="30" required value="{{ graduate.position }}">
                    </li>
                    <li>
                        <label for="city">City</label>
                        <input id="city" name="city" type="text" maxlength="30" required value="{{ graduate.city }}">
                    </li>
                    <li>
                        <label for="presentation">Presentation</label>
                        <textarea id="presentation" name="presentation" maxlength="255" rows="10" required>{{ graduate.presentation }}</textarea>
                    </li>
                </ul>
                <ul>
                    <li>
                        <input type="reset" value="Reset">
                        <input type="submit" value="Update">
                    </li>
                </ul>
            </fieldset>
        </form>
        <a class="btn-black btn-lg" href="{{ url('admin') }}">Quit</a>
    </main>
{% endblock %}

{% extends 'layout/layout.twig' %}

{% block title %}Créer un Nouveau Projet{% endblock %}

{% block description %}{% endblock %}

{% block main %}
<main class="align-center">
    <form class="form" 
        method="post" 
        action={{ url('projects!create') }} 
        enctype="multipart/form-data">
        <input type="hidden" 
            name="MAX_FILE_SIZE" 
            value="10000000">
        <fieldset>
            <legend>
                <i class="fas fa-jedi fa-4x color-green"></i>
            </legend>
            <ul>
                <li>
                    <label for="name">
                        Nom
                    </label>
                    <input id="name" 
                        name="name" 
                        type="text" 
                        placeholder="Nom du Projet" 
                        maxlength="20" 
                        required>
                </li>
                <li>
                    <label for="file">
                        Image
                    </label>
                    <input name="file" 
                        type="file" 
                        accept=".jpg, .jpeg, .png, .gif" 
                        required>
                </li>
                <li>
                    <label for="link">
                        Lien
                    </label>
                    <input id="link" 
                        name="link" 
                        type="text" 
                        value="https://" 
                        maxlength="50" 
                        required>
                </li>
                <li>
                    <label for="year">
                        Année
                    </label>
                    <input id="year" 
                        name="year" 
                        type="number" 
                        placeholder="2021" 
                        required>
                </li>
                <li>
                    <label for="category">
                        Catégorie
                    </label>
                    <select id="category" 
                        name="category" 
                        required>
                        <option value="tool">
                            -- Choisissez une Catégorie
                        </option>
                        <option value="tool">
                            Outil
                        </option>
                        <option value="website">
                            Site Web
                        </option>
                    </select>
                </li>
                <li>
                    <label for="description">
                        Description
                    </label>
                    <textarea id="description" 
                        name="description" 
                        rows="10" 
                        placeholder="Description du Projet" 
                        maxlength="255" 
                        required></textarea>
                </li>
            </ul>
            <ul>
                <li>
                    <input type="reset" 
                        value="Réinitialiser">
                    <input type="submit" 
                        value="Créer">
                </li>
            </ul>
        </fieldset>
    </form>
    <a class="btn-black btn-lg" 
        href="{{ url('admin') }}">
        Quitter
    </a>
</main>
{% endblock %}

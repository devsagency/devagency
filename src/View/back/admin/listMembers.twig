<section class="menu-target4">
    <h2 class="deco-under color-violet">
        <i class="fas fa-user-ninja"></i>
        Ã‰quipe
    </h2>
    <a class="btn-green btn-lg" 
        href="{{ url('members!create') }}">
        Nouveau Membre
    </a>
    <table class="table">
        <thead>
        <tr>
            <th>Membre</th>
            <th>Infos</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        
        {% for member in allMembers %}
            <tr>
                <td>
                    <figure>
                        <img class="bord-sm bord-violet" 
                            src="img/members/{{ member.image }}" 
                            alt="Screenshot of {{ member.name }}">
                        <figcaption>
                            {{ member.name }}
                        </figcaption>
                    </figure>
                </td>
                <td>
                    <p>
                        <i class="fas fa-map-marker-alt fa-fw fa-lg"></i> 
                        {{ member.city }}
                    </p>
                    <p>
                        <i class="fas fa-briefcase fa-fw fa-lg"></i> 
                        {{ member.position }}
                    </p>
                    <hr>
                    <ul>
                        <li>
                            <a class="button-in"
                                href="https://www.linkedin.com/in/{{ member.linkedin }}">
                                <i class="fab fa-linkedin fa-fw fa-lg"></i> 
                                {{ member.linkedin }}
                            </a>
                        </li>
                        <li>
                            <a class="button-gh"
                                href="https://github.com/{{ member.github }}">
                                <i class="fab fa-github fa-fw fa-lg"></i> 
                                {{ member.github }}
                            </a>
                        </li>
                        <li>
                            <a class="button-blue"
                                href="mailto:{{ member.email }}">
                                <i class="fas fa-envelope fa-fw fa-lg"></i> 
                                <span>{{ member.email }}</span>
                            </a>
                        </li>
                        <li>
                            <a class="button-green"
                                href="https://{{ member.website }}">
                                <i class="fas fa-globe-europe fa-fw fa-lg"></i> 
                                {{ member.website }}
                            </a>
                        </li>
                    </ul>
                    <hr>
                    <p>{{ member.presentation }}</p>
                </td>
                <td>
                    <a class="btn-blue" 
                        href="{{ url('members!update', {'id': member.id}) }}">
                        <i class="fas fa-pen-square fa-fw fa-lg"></i>
                    </a>
                    <br>
                    <a class="btn-red" 
                        href="{{ url('members!delete', {'id': member.id}) }}">
                        <i class="fas fa-times-circle fa-fw fa-lg"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</section>

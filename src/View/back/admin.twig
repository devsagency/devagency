{% extends 'layout/layout.twig' %}

{% block title %}Administration{% endblock %}

{% block description %}{% endblock %}

{% block main %}
    <input id="menu-radio1" 
        class="menu-radio1" 
        type="radio" 
        name="menu" 
        checked>
    <input id="menu-radio2" 
        class="menu-radio2" 
        type="radio" 
        name="menu">
    <input id="menu-radio3" 
        class="menu-radio3" 
        type="radio" 
        name="menu">
    <input id="menu-radio4" 
        class="menu-radio4" 
        type="radio" 
        name="menu">

    <nav class="menu">
        <label for="menu-radio1" 
            title="Voir les Services">
            <i class="fas fa-concierge-bell"></i>
            <span>
                Services
            </span>
        </label>
        <label for="menu-radio2" 
            title="Voir les Projets">
            <i class="fas fa-jedi"></i>
            <span>
                Projets
            </span>
        </label>
        <label for="menu-radio3" 
            title="Voir les Développeurs Diplômés">
            <i class="fas fa-user-tie"></i>
            <span>
                Développeurs
            </span>
        </label>
        <label for="menu-radio4" 
            title="Voir les Membres de l'Équipe">
            <i class="fas fa-user-ninja"></i>
            <span>
                Équipe
            </span>
        </label>
    </nav>

    <main id="admin" 
        class="menu-relay">

        {{ include("back/adminServices.twig") }}        
        {{ include("back/adminProjects.twig") }}        
        {{ include("back/adminDevelopers.twig") }}        
        {{ include("back/adminMembers.twig") }}        

    </main>
{% endblock %}

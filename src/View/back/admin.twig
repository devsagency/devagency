{% extends 'layout/layout.twig' %}

{% block subtitle %}Administration{% endblock %}

{% block summary %}{% endblock %}

{% block main %}
    <input id="menu-radio1" class="menu-radio1" type="radio" name="menu" checked>
    <input id="menu-radio2" class="menu-radio2" type="radio" name="menu">
    <input id="menu-radio3" class="menu-radio3" type="radio" name="menu">
    <input id="menu-radio4" class="menu-radio4" type="radio" name="menu">

    <nav class="menu">
        <label class="button-red" for="menu-radio1" title="Show Services">
            <i class="fas fa-concierge-bell color-red-into"></i>
            <span class="color-red-into">Services</span>
        </label>
        <label class="button-green" for="menu-radio2" title="Show Projects">
            <i class="fas fa-jedi color-green-into"></i>
            <span class="color-green-into">Projects</span>
        </label>
        <label class="button-blue" for="menu-radio3" title="Show Graduates">
            <i class="fas fa-user-graduate color-blue-into"></i>
            <span class="color-blue-into">Graduates</span>
        </label>
        <label class="button-purple" for="menu-radio4" title="Show Members">
            <i class="fas fa-users color-purple-into"></i>
            <span class="color-purple-into">Members</span>
        </label>
    </nav>

    <main id="admin" class="menu-relay">
        <section class="menu-target1">
            <h2 class="deco-under color-red">
                <i class="fas fa-concierge-bell"></i>
                Service
            </h2>
            <a class="btn-green btn-lg" href="{{ url('services!create') }}">New Service</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Service</th>
                    <th>Infos</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for service in allServices %}
                    <tr>
                        <td>
                            <i class="fas fa-{{ service.icon }} fa-lg"></i>
                            <hr>
                            {{ service.name }}
                        </td>
                        <td>{{ service.description }}</td>
                        <td>
                            <a class="btn-blue" href="{{ url('services!update', {'id': service.id}) }}">
                                <i class="fas fa-pen-square fa-fw fa-lg"></i>
                            </a>
                            <a class="btn-red" href="{{ url('services!delete', {'id': service.id}) }}">
                                <i class="fas fa-times-circle fa-fw fa-lg"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>

        <section class="menu-target2">
            <h2 class="deco-under color-green">
                <i class="fas fa-jedi"></i>
                Projects
            </h2>
            <a class="btn-green btn-lg" href="{{ url('projects!create') }}">New Project</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Project</th>
                    <th>Infos</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for project in allProjects %}
                    <tr>
                        <td>
                            <a class="button-gh" href="https://{{ project.link }}" title="See the project @GitHub">
                                <figure>
                                    <img src="img/projects/{{ project.image }}" alt="Screenshot of the project {{ project.name }}">
                                    <figcaption>{{ project.name }}</figcaption>
                                </figure>
                            </a>
                        </td>
                        <td>{{ project.description }}<hr>{{ project.category|capitalize }} - {{ project.year }}</td>
                        <td>
                            <a class="btn-blue" href="{{ url('projects!update', {'id': project.id}) }}">
                                <i class="fas fa-pen-square fa-fw fa-lg"></i>
                            </a>
                            <a class="btn-red" href="{{ url('projects!delete', {'id': project.id}) }}">
                                <i class="fas fa-times-circle fa-fw fa-lg"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>

        <section class="menu-target3">
            <h2 class="deco-under color-blue">
                <i class="fas fa-user-graduate"></i>
                Graduates
            </h2>
            <a class="btn-green btn-lg" href="{{ url('graduates!create') }}">New Graduate</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Graduate</th>
                    <th>Infos</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for graduate in allGraduates %}
                    <tr>
                        <td>
                            <figure>
                                <img class="bord-sm bord-purple" src="img/graduates/{{ graduate.image }}" alt="Screenshot of {{ graduate.name }}">
                                <figcaption>
                                    <h3>{{ graduate.name }}</h3>
                                    <p>{{ graduate.position }}</p>
                                </figcaption>
                            </figure>
                        </td>
                        <td>
                            <p>
                                <i class="fas fa-map-marker-alt fa-fw fa-lg"></i> {{ graduate.city }}
                            </p>
                            <p>
                                <a href="https://www.linkedin.com/in/{{ graduate.linkedin }}">
                                    <i class="fab fa-linkedin fa-fw fa-lg"></i> {{ graduate.linkedin }}
                                </a>
                            </p>
                            <p>
                                <a href="mailto:{{ graduate.email }}">
                                    <i class="fas fa-envelope fa-fw fa-lg"></i> {{ graduate.email }}
                                </a>
                            </p>
                            <p>
                                <a href="https://{{ graduate.website }}">
                                    <i class="fas fa-globe-europe fa-fw fa-lg"></i> {{ graduate.website }}
                                </a>
                            </p>
                            <hr>
                            <p>{{ graduate.presentation }}</p>
                        </td>
                        <td>
                            <a class="btn-blue" href="{{ url('graduates!update', {'id': graduate.id}) }}">
                                <i class="fas fa-pen-square fa-fw fa-lg"></i>
                            </a>
                            <a class="btn-red" href="{{ url('graduates!delete', {'id': graduate.id}) }}">
                                <i class="fas fa-times-circle fa-fw fa-lg"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>

        <section class="menu-target4">
            <h2 class="deco-under color-purple">
                <i class="fas fa-users"></i>
                Members
            </h2>
            <a class="btn-green btn-lg" href="{{ url('members!create') }}">New Member</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Member</th>
                    <th>Infos</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for member in allMembers %}
                    <tr>
                        <td>
                            <figure>
                                <img class="bord-sm bord-purple" src="img/members/{{ member.image }}" alt="Screenshot of {{ member.name }}">
                                <figcaption>
                                    <h3>{{ member.name }}</h3>
                                    <p>{{ member.position }}</p>
                                </figcaption>
                            </figure>
                        </td>
                        <td>
                            <p>
                                <i class="fas fa-map-marker-alt fa-fw fa-lg"></i> {{ member.city }}
                            </p>
                            <p>
                                <a href="https://www.linkedin.com/in/{{ member.linkedin }}">
                                    <i class="fab fa-linkedin fa-fw fa-lg"></i> {{ member.linkedin }}
                                </a>
                            </p>
                            <p>
                                <a href="mailto:{{ member.email }}">
                                    <i class="fas fa-envelope fa-fw fa-lg"></i> {{ member.email }}
                                </a>
                            </p>
                            <p>
                                <a href="https://{{ member.website }}">
                                    <i class="fas fa-globe-europe fa-fw fa-lg"></i> {{ member.website }}
                                </a>
                            </p>
                            <hr>
                            <p>{{ member.presentation }}</p>
                        </td>
                        <td>
                            <a class="btn-orange" href="{{ url('auth!logout') }}">
                                <i class="fas fa-sign-out-alt fa-fw fa-lg"></i>
                            </a>
                            <a class="btn-blue" href="{{ url('members!update', {'id': member.id}) }}">
                                <i class="fas fa-pen-square fa-fw fa-lg"></i>
                            </a>
                            <a class="btn-red" href="{{ url('members!delete', {'id': member.id}) }}">
                                <i class="fas fa-times-circle fa-fw fa-lg"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>
    </main>
{% endblock %}

{% extends 'layout/layout.twig' %}

{% block subtitle %}Administration{% endblock %}

{% block summary %}{% endblock %}

{% block main %}
    <input id="menu-radio1" class="menu-radio1" type="radio" name="menu" checked>
    <input id="menu-radio2" class="menu-radio2" type="radio" name="menu">
    <input id="menu-radio3" class="menu-radio3" type="radio" name="menu">

    <nav class="menu">
        <label class="button-red" for="menu-radio1" title="Show Services">
            <i class="fas fa-concierge-bell color-red-into"></i>
            <span class="color-red-into">Services</span>
        </label>
        <label class="button-blue" for="menu-radio2" title="Show Projects">
            <i class="fas fa-jedi color-blue-into"></i>
            <span class="color-blue-into">Projects</span>
        </label>
        <label class="button-purple" for="menu-radio3" title="Show Users">
            <i class="far fa-user color-purple-into"></i>
            <span class="color-purple-into">Users</span>
        </label>
    </nav>

    <main id="admin" class="menu-relay">
        <section class="menu-target1">
            <h2 class="deco-under color-red">
                <i class="fas fa-concierge-bell"></i>
                Service
            </h2>
            <a class="btn-green btn-lg" href="{{ url('service!create') }}">New Service</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Service</th>
                    <th>Infos</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for service in services %}
                    <tr>
                        <td>
                            {{ service.id }} -
                            <i class="fas fa-{{ service.icon }} fa-lg"></i>
                            <hr>
                            {{ service.name }}
                        </td>
                        <td>{{ service.description }}</td>
                        <td>
                            <a class="btn-blue" href="{{ url('service!update', {'id': service.id}) }}">
                                <i class="fas fa-pen-square fa-fw fa-lg"></i>
                            </a>
                            <a class="btn-red" href="{{ url('service!delete', {'id': service.id}) }}">
                                <i class="fas fa-times-circle fa-fw fa-lg"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>

        <section class="menu-target2">
            <h2 class="deco-under color-green">
                <i class="fas fa-jedi"></i>
                Projects
            </h2>
            <a class="btn-green btn-lg" href="{{ url('project!create') }}">New Project</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Project</th>
                    <th>Infos</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        <td>
                            <a class="button-gh" href="https://{{ project.link }}" title="See the project @GitHub">
                                <figure>
                                    <img src="img/projects/{{ project.image }}" alt="Screenshot of the project {{ project.name }}">
                                    <figcaption>{{ project.id }} - {{ project.name }}</figcaption>
                                </figure>
                            </a>
                        </td>
                        <td>{{ project.description }}<hr>{{ project.year }} - {{ project.category|capitalize }}</td>
                        <td>
                            <a class="btn-blue" href="{{ url('project!update', {'id': project.id}) }}">
                                <i class="fas fa-pen-square fa-fw fa-lg"></i>
                            </a>
                            <a class="btn-red" href="{{ url('project!delete', {'id': project.id}) }}">
                                <i class="fas fa-times-circle fa-fw fa-lg"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>

        <section class="menu-target3">
            <h2 class="deco-under color-blue">
                <i class="fas fa-user"></i>
                Users
            </h2>
            <a class="btn-green btn-lg" href="{{ url('user!create') }}">New User</a>
            <table class="table">
                <thead>
                <tr>
                    <th>User</th>
                    <th>Infos</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            <figure>
                                <img class="bord-sm bord-purple" src="img/user/{{ user.image }}" alt="Screenshot of {{ user.name }}">
                                <figcaption>{{ user.id }} - {{ user.name }}</figcaption>
                            </figure>
                        </td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a class="btn-orange" href="{{ url('user!logout') }}">
                                <i class="fas fa-sign-out-alt fa-fw fa-lg"></i>
                            </a>
                            <a class="btn-blue" href="{{ url('user!update', {'id': user.id}) }}">
                                <i class="fas fa-pen-square fa-fw fa-lg"></i>
                            </a>
                            <a class="btn-red" href="{{ url('user!delete', {'id': user.id}) }}">
                                <i class="fas fa-times-circle fa-fw fa-lg"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>
    </main>
{% endblock %}

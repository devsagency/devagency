{% extends 'layout/layout.twig' %}

{% block subtitle %}Administration{% endblock %}

{% block description %}{% endblock %}

{% block main %}
    <input id="menu-radio1" class="menu-radio1" type="radio" name="menu" checked>
    <input id="menu-radio2" class="menu-radio2" type="radio" name="menu">
    <input id="menu-radio3" class="menu-radio3" type="radio" name="menu">

    <nav class="menu">
        <label class="button-red btn-lg" for="menu-radio1" title="Show Services">
            <i class="fas fa-concierge-bell fa-lg"></i> Services
        </label>
        <label class="button-green btn-lg" for="menu-radio2" title="Show Projects">
            <i class="fas fa-jedi fa-lg"></i> Projects
        </label>
        <label class="button btn-lg" for="menu-radio3" title="Show Users">
            <i class="far fa-user fa-lg"></i> Users
        </label>
    </nav>

    <main id="admin" class="menu-relay">
        {{ include('back/listServices.twig') }}
        {{ include('back/listProjects.twig') }}
        {{ include('back/listUsers.twig') }}
    </main>
{% endblock %}
